# BBB endpoint incl. /bigbluebutton/api (from `bbb-conf --secret`)
BBB_API_BASE=https://YOUR_BBB_HOST/bigbluebutton/api
BBB_SECRET=CHANGE_ME

# Public base URL of the bot, EXACTLY as BBB calls it (used for signature verification)
PUBLIC_BASE_URL=https://YOUR_BBB_HOST/ally

# DashScope (Alibaba Model Studio)
DASHSCOPE_API_KEY=sk-...
APP_ID=

# Trigger phrase and bot display name
ALLY_TRIGGER=@ask ally
ALLY_NAME=Ally

# Redis
REDIS_URL=redis://redis:6379

# Webhook signature verification
WEBHOOK_CHECKSUM_ALG=sha256
WEBHOOK_STRICT=true

# HTTP port for the bot container
PORT=8080
